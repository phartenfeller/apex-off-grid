{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "recommended": true,
        "noUnusedVariables": "warn",
        "noSwitchDeclarations": "off"
      },
      "nursery": {
        "recommended": true
      },
      "style": {
        "recommended": true,
        "noUnusedTemplateLiteral": "off"
      },
      "suspicious": {
        "recommended": true,
        "noExplicitAny": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentSize": 2
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "files": {
    "ignore": [
      "**/jswasm/**",
      "**/node_modules/**",
      "**/build/**",
      "**/bundle.*"
    ]
  }
}
